<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="EasySoccer.Mobile.Views.ScheduleAvaliable">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="{Binding Image}" Aspect="Fill" HeightRequest="150"></Image>
                <StackLayout Padding="5">
                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Title"></Label>
                    <Label Text="{Binding City}" FontSize="Small" FontAttributes="Italic" TextColor="#4E4E4E"></Label>
                    <Label Text="{Binding CompleteAddress}" FontSize="Micro" FontAttributes="Italic" TextColor="#4E4E4E"></Label>
                </StackLayout>
            </StackLayout>
            <CollectionView BackgroundColor="#DCDCDC" ItemsSource="{Binding AvaliableSchedules}" ItemSizingStrategy="MeasureAllItems" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Frame HasShadow="True" CornerRadius="10" Padding="0" IsClippedToBounds="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectSoccerPicthCommand}" CommandParameter="{Binding .}"></TapGestureRecognizer>
                                </Frame.GestureRecognizers>
                                <StackLayout Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding SelectedDate, StringFormat='{0:dd/MM/yyyy}'}" VerticalOptions="Center" FontSize="Large" FontAttributes="Bold"></Label>
                                        <Frame Grid.Column="1" CornerRadius="10" BackgroundColor="#5cb85c" Padding="0" IsVisible="{Binding IsCurrentSchedule}">
                                            <Label Text="Horário Dísponivel" TextColor="#FFF" FontSize="Small" FontAttributes="Bold" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                                        </Frame>
                                        <Frame Grid.Column="1" CornerRadius="10" BackgroundColor="#f0ad4e" Padding="0" IsVisible="{Binding IsAlternativeSchedule}">
                                            <Label Text="Horário Alternativo" TextColor="#FFF" FontSize="Small" FontAttributes="Bold" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </Grid>
                                    <Label Text="{Binding SelectedHourStartEnd}" VerticalOptions="Center" FontSize="Small" FontAttributes="Italic" TextColor="#4E4E4E"></Label>
                                    <Picker ItemsSource="{Binding PossibleSoccerPitchNames}" Title="Selecione a Quadra" SelectedIndex="{Binding SelectedIndexPitch}"/>
                                    <Picker ItemsSource="{Binding SoccerPitchPlansNames}" Title="Selecione o plano" SelectedIndex="{Binding SelectedIndexPlan}"/>
                                    <Button Text="Realizar agendamento" Command="{Binding MakeScheduleCommand}" BackgroundColor="#FF591F" TextColor="#FFF" Margin="0, 5,0,5" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid VerticalOptions="FillAndExpand">
                        <Label VerticalOptions="Center" HorizontalOptions="Center" Text="Nenhum complexo encontrado." TextColor="#4E4E4E"/>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>